{
  "name": "ballerina-lint",
  "displayName": "ballerina-lint",
  "description": "A fully functional Ballerina best practices checker",
  "version": "1.0.0",
  "publisher": "PramithaMJ",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:ballerina",
    "onCommand:ballerina-lint.applyFix"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ballerina-lint.applyFix",
        "title": "Apply Ballerina Lint Fix"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
